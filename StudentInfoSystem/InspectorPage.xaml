<Page x:Class="StudentInfoSystem.InspectorPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:StudentInfoSystem"
      mc:Ignorable="d" 
      d:DesignHeight="300" d:DesignWidth="300"
      Title="InspectorPage">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        <Grid Grid.Row="0">
            <Grid.ColumnDefinitions>
                <ColumnDefinition/>
                <ColumnDefinition/>
            </Grid.ColumnDefinitions>
            <ListBox Name="groupsLB" Grid.Column="0">
            </ListBox>
            <Button Margin="10,0,0,0" Grid.Column="1" Width="125" Height="25" HorizontalAlignment="Left" Click="Button_Click">Show Students</Button>
        </Grid>
        <ListBox Name="studentsLB" Grid.Row="1">
        </ListBox>
    </Grid>
</Page>
